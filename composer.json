{
	"name": "docalist/postal-address-metadata",
	"description": "Docalist : Méta données pour formatter des adresses postales.",
    "homepage": "https://docalist.org/",
    "license" : "GPL-2.0-or-later",

	"authors": [ 
        {
            "name": "Daniel Ménard",
            "email": "daniel.menard@laposte.net",
            "homepage": "https://docalist.org/"
        }
    ],

	"keywords": [
		"docalist", "Postal Address"
	],
    
    "support": {
        "issues": "https://github.com/docalist/docalist/issues",
        "forum": "https://groups.google.com/forum/#!forum/docalist-discuss"
    },
    
	"require": {
		"php": ">=7.2"
	},
	
	"autoload": {
        "psr-4": {
            "Docalist\\PostalAddressMetadata\\": "class" 
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Docalist\\PostalAddressMetadata\\Tests\\": "tests"
        }
    },
    "config" : {
        "sort-packages" : true,
        "optimize-autoloader" : true,
        "classmap-authoritative" : true
    },
    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0-dev"
        }
    },
	"require-dev": {
		"phpunit/phpunit": "~5.7",
		"squizlabs/php_codesniffer": "^3.3"
	},
	"scripts": {
	   "test": "phpunit",
	   "cs": "phpcs"
	}
}
